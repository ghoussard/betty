{
  "name": "betty",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir src",
    "lint:fix": "next lint --dir src --fix",
    "prettier": "prettier --config .prettierrc.json --check src cypress __tests__",
    "prettier:fix": "prettier --config .prettierrc.json --write src cypress __tests__",
    "test:back:unit": "TEST_SUITE=unit-back jest",
    "test:back:integration": "firebase emulators:exec --only firestore --project test 'TEST_SUITE=integration-back jest'",
    "test:front": "TEST_SUITE=front jest",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "e2e": "firebase emulators:exec --only firestore --project e2e 'start-server-and-test start http://localhost:3000 cypress'",
    "e2e:headless": "firebase emulators:exec --only firestore --project e2e 'start-server-and-test start http://localhost:3000 cypress:headless'"
  },
  "dependencies": {
    "firebase": "^9.6.7",
    "next": "12.0.10",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@types/firebase": "^3.2.1",
    "@types/node": "17.0.14",
    "@types/react": "17.0.39",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "autoprefixer": "^10.4.2",
    "cypress": "^9.4.1",
    "eslint": "8.8.0",
    "eslint-config-next": "12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.4.7",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.22",
    "typescript": "4.5.5"
  }
}
